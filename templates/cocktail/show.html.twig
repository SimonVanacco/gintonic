{% extends 'base.html.twig' %}

{% block title %}Home - {{ parent() }}{% endblock %}

{% block content %}
    <div>
        <a href="{{ path('index') }}">
            Retour
        </a>
        <div class="row">
            <div class="col-12 col-md-5 col-lg-4">
                <img src="{{ asset('images/missing-cocktail.jpg') }}" class="img-fluid"/>
            </div>
            <div class="col-12 col-md-7 col-lg-8">
                <h1 class="display-1">{{ cocktail }}</h1>
                <hr>
                <p class="mt-6">
                    {% if cocktail.glass and cocktail.glass.icon and cocktail.glass.iconFamily %}
                        <i class="{{ cocktail.glass.iconFamily }} fa-{{ cocktail.glass.icon }} text-right mr-2"></i>
                    {% endif %}
                    {% for tag in cocktail.tags %}
                        <span class="badge badge-primary">{{ tag }}</span> {# Todo: Outline #}
                    {% endfor %}
                </p>
                {% if cocktail.description %}
                    <p class="mt-5 mb-5">{{ cocktail.description }}</p>
                {% endif %}
                {% if cocktail.ingredients %}
                    <p class="h5 mt-5 mb-3">Ingredients</p>
{#                    {% for ingredient in cocktail.ingredient %}#}
{#                        #}
{#                    {% endfor %}#}
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
