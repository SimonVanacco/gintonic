{% extends 'base.html.twig' %}

{% block title %}{{ 'Login'|trans }} - {{ parent() }}{% endblock %}

{% block content %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <div class="card card-body bg-dark text-white mt-5">
        <form action="{{ path('login') }}" method="post">
            <label for="username" class="form-label mt-4">{{ 'Email'|trans }}:</label>
            <input type="text" id="username" name="_username" value="{{ last_username }}" class="form-control"/>

            <label for="password" class="form-label mt-4">{{ 'Password'|trans }}:</label>
            <input type="password" id="password" name="_password" class="form-control"/>

            <div class="form-check mt-4">
                <input class="form-check-input" type="checkbox" name="_remember_me" id="rememberMeCheck" checked>
                <label class="form-check-label" for="flexCheckDefault">
                    {{ 'Stay logged-in'|trans }}
                </label>
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            <button type="submit" class="btn btn-primary mt-4">{{ 'Login'|trans }}</button>
        </form>
    </div>
{% endblock %}
