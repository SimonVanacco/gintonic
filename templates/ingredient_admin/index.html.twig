{% extends 'base.html.twig' %}

{% block title %}Ingredient index{% endblock %}

{% block content %}
    <h1>Ingredient index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>IsInStock</th>
                <th>IsToBuy</th>
                <th>Photo</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for ingredient in ingredients %}
            <tr>
                <td>{{ ingredient.id }}</td>
                <td>{{ ingredient.name }}</td>
                <td>{{ ingredient.description }}</td>
                <td>{{ ingredient.isInStock ? 'Yes' : 'No' }}</td>
                <td>{{ ingredient.isToBuy ? 'Yes' : 'No' }}</td>
                <td>{{ ingredient.photo }}</td>
                <td>
                    <a href="{{ path('ingredient_admin_show', {'id': ingredient.id}) }}">show</a>
                    <a href="{{ path('ingredient_admin_edit', {'id': ingredient.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('ingredient_admin_new') }}">Create new</a>
{% endblock %}
