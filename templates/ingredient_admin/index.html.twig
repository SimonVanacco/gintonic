{% extends 'base.html.twig' %}

{% block title %}Ingredient index{% endblock %}

{% block content %}
    <h1>Ingredient index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>#</th>
                <th>Name</th>
                <th>In Stock ?</th>
                <th>In Shopping list ?</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for ingredient in ingredients %}
            <tr>
                <td>{{ ingredient.id }}</td>
                <td>{{ ingredient.name }}</td>
                <td>
                    {% include '_partials/_boolean.html.twig' with {'entity': ingredient, 'property': 'isInStock'} %}
                </td>
                <td>
                    {% include '_partials/_boolean.html.twig' with {'entity': ingredient, 'property': 'isToBuy'} %}
                </td>
                <td>
                    <a href="{{ path('ingredient_admin_show', {'id': ingredient.id}) }}">show</a>
                    <a href="{{ path('ingredient_admin_edit', {'id': ingredient.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">No records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('ingredient_admin_new') }}">Create new</a>
{% endblock %}
