<turbo-frame id="cocktail-ingredients-admin">
    <p class="h5 mb-3">{{ 'Ingredients'|trans }}</p>
    <div class="card card-body bg-dark">
        <table class="table table-dark table-hover">
            <thead>
            <tr>
                <th>{{ 'Name'|trans }}</th>
                <th>{{ 'Quantity'|trans }}</th>
                <th>{{ 'Optional'|trans }}</th>
                <th>{{ 'Decoration'|trans }}</th>
                <th>{{ 'Actions'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for cocktail_ingredient in cocktail.ingredients %}
                {% set ingredient = cocktail_ingredient.ingredient %}
                <tr>
                    <td>{{ ingredient }}</td>
                    <td>{{ cocktail_ingredient.formattedQuantity }}</td>
                    <td>{% include '_partials/_boolean.html.twig' with {'entity': cocktail_ingredient, 'property': 'isOptional'} %}</td>
                    <td>{% include '_partials/_boolean.html.twig' with {'entity': cocktail_ingredient, 'property': 'isDecoration'} %}</td>
                    <td>
                        <a class="btn btn-link" href="{{ path('cocktail_ingredient_admin_edit', {'cocktail': cocktail.id, 'id': cocktail_ingredient.id}) }}"><i class="fas fa-pen"></i></a>
                        {{ include('admin/cocktail_ingredient/_delete_form.html.twig') }}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="5">
                        <a class="btn btn-outline-primary float-end" href="{{ path('cocktail_ingredient_admin_new', {'cocktail': cocktail.id}) }}">{{ 'Create new'|trans }}</a>
                    </td>
                </tr>
            </tfoot>
        </table>
    </div>
</turbo-frame>
