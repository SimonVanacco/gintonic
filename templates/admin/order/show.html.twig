{% extends 'base_admin.html.twig' %}

{% block title %}Order{% endblock %}

{% block content %}
    <h1>Order #{{ order.id }}</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>{{ 'Id'|trans }}</th>
            <td>{{ order.id }}</td>
        </tr>
        <tr>
            <th>{{ 'Name'|trans }}</th>
            <td>{{ order.name }}</td>
        </tr>
        <tr>
            <th>{{ 'Date'|trans }}</th>
            <td>{{ order.createdAt|format_datetime('short', 'short') }}</td>
        </tr>
        </tbody>
    </table>

    <p class="h5 mb-3">{{ 'Items'|trans }}</p>
    <div class="card card-body bg-dark">
        <table class="table table-dark table-hover">
            <thead>
            <tr>
                <th>{{ 'Name'|trans }}</th>
                <th>{{ 'Action'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for item in order.items %}
                <tr>
                    <td>{{ item.cocktail }}</td>
                    <td>
                        <a href="{{ path('app_cocktail_show', {'id': item.cocktail.id}) }}"><i class="fa-solid fa-magnifying-glass"></i></a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>


    <a href="{{ path('order_admin_index') }}">{{ 'back to list'|trans }}</a>
{% endblock %}
