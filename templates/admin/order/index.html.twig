{% extends 'base_admin.html.twig' %}

{% block title %}{{ 'Orders'|trans }}{% endblock %}

{% block content %}
    <h1>{{ 'Orders'|trans }}</h1>

    <table class="table">
        <thead>
        <tr>
            <th>{{ 'Id'|trans }}</th>
            <th>{{ 'Name'|trans }}</th>
            <th>{{ 'Date'|trans }}</th>
            <th>{{ 'Actions'|trans }}</th>
        </tr>
        </thead>
        <tbody>
        {% for order in orders %}
            <tr>
                <td>{{ order.id }}</td>
                <td>{{ order.name }}</td>
                <td>{{ order.createdAt|format_datetime('short', 'short') }}</td>
                <td>
                    <a href="{{ path('order_admin_show', {'id': order.id}) }}">{{ 'Show'|trans }}</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">{{ 'No records found'|trans }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
