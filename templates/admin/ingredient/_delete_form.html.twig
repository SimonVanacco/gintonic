<form
        method="post"
        action="{{ path('ingredient_admin_delete', {'id': ingredient.id}) }}"
        onsubmit="return confirm('{{ 'Are you sure you want to delete this item?'|trans }}');"
        class="d-inline-block"
>
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ ingredient.id) }}">
    <button class="btn btn-outline-danger">{{ 'Delete'|trans }}</button>
</form>
