{% extends 'base_admin.html.twig' %}

{% block title %}Ingredient{% endblock %}

{% block content %}
    <h1>Ingredient</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ ingredient.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ ingredient.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ ingredient.description }}</td>
            </tr>
            <tr>
                <th>IsInStock</th>
                <td>{{ ingredient.isInStock ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>IsToBuy</th>
                <td>{{ ingredient.isToBuy ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Photo</th>
                <td>{{ ingredient.photo }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-outline-secondary" href="{{ path('ingredient_admin_index') }}">{{ 'Back to list'|trans }}</a>
    <a class="btn btn-outline-secondary" href="{{ path('ingredient_admin_edit', {'id': ingredient.id}) }}">{{ 'Edit'|trans }}</a>
    {{ include('admin/ingredient/_delete_form.html.twig') }}
{% endblock %}
