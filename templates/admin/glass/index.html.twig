{% extends 'base_admin.html.twig' %}

{% block title %}{{ 'Glass list'|trans }}{% endblock %}

{% block content %}
    <h1>{{ 'Glass list'|trans }}</h1>

    <table class="table">
        <thead>
            <tr>
                <th>{{ 'Id'|trans }}</th>
                <th>{{ 'Icon'|trans }}</th>
                <th>{{ 'Name'|trans }}</th>
                <th>{{ 'Actions'|trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for glass in glasses %}
            <tr>
                <td>{{ glass.id }}</td>
                <td>
                    {% if glass.icon and glass.iconFamily %}
                        <i class="{{ glass.iconFamily }} fa-{{ glass.icon }}"></i>
                    {% endif %}
                </td>
                <td>{{ glass.name }}</td>
                <td>
                    <a href="{{ path('glass_admin_show', {'id': glass.id}) }}">{{ 'Show'|trans }}</a>
                    <a href="{{ path('glass_admin_edit', {'id': glass.id}) }}">{{ 'Edit'|trans }}</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">{{ 'No records found'|trans }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-outline-primary" href="{{ path('glass_admin_new') }}">{{ 'Create new'|trans }}</a>
{% endblock %}
