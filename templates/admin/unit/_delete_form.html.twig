<form method="post" action="{{ path('unit_admin_delete', {'id': unit.id}) }}" onsubmit="return confirm('{{ 'Are you sure you want to delete this item?'|trans }}');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ unit.id) }}">
    <button class="btn">{{ 'Delete'|trans }}</button>
</form>
