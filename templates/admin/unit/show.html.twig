{% extends 'base_admin.html.twig' %}

{% block title %}Unit{% endblock %}

{% block content %}
    <h1>Unit</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ unit.id }}</td>
            </tr>
            <tr>
                <th>Singular</th>
                <td>{{ unit.singular }}</td>
            </tr>
            <tr>
                <th>Plural</th>
                <td>{{ unit.plural }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-outline-secondary" href="{{ path('unit_admin_index') }}">{{ 'Back to list'|trans }}</a>
    <a class="btn btn-outline-secondary" href="{{ path('unit_admin_edit', {'id': unit.id}) }}">{{ 'Edit'|trans }}</a>
    {{ include('admin/unit/_delete_form.html.twig') }}
{% endblock %}
