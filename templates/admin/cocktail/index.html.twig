{% extends 'base_admin.html.twig' %}

{% block title %}{{ 'Cocktail list'|trans }}{% endblock %}

{% block content %}
    <h1>{{ 'Cocktail list'|trans }}</h1>

    <table class="table">
        <thead>
            <tr>
                <th>{{ 'Id'|trans }}</th>
                <th>{{ 'Name'|trans }}</th>
                <th>{{ 'Enabled ?'|trans }}</th>
                <th>{{ 'Featured ?'|trans }}</th>
                <th>{{ 'Actions'|trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for cocktail in cocktails %}
            <tr>
                <td>{{ cocktail.id }}</td>
                <td>{{ cocktail.name }}</td>
                <td>
                    {% include '_partials/_boolean.html.twig' with {'entity': cocktail, 'property': 'isEnabled'} %}
                </td>
                <td>
                    {% include '_partials/_boolean.html.twig' with {'entity': cocktail, 'property': 'isFeatured'} %}
                </td>
                <td>
                    <a href="{{ path('cocktail_admin_show', {'id': cocktail.id}) }}">{{ 'Show'|trans }}</a>
                    <a href="{{ path('cocktail_admin_edit', {'id': cocktail.id}) }}">{{ 'Edit'|trans }}</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">{{ 'No records found'|trans }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-outline-primary" href="{{ path('cocktail_admin_new') }}">{{ 'Create new'|trans }}</a>
{% endblock %}
