{{ form_start(form) }}

    {{ form_errors(form) }}
    {{ form_widget(form._token) }}
<div class="row mb-2">
    <div class="col-md-6">
        {{ form_label(form.firstName) }}
        {{ form_errors(form.firstName) }}
        {{ form_widget(form.firstName) }}
    </div>
    <div class="col-md-6">
        {{ form_label(form.lastName) }}
        {{ form_errors(form.lastName) }}
        {{ form_widget(form.lastName) }}
    </div>
</div>

<div class="mb-2">
    {{ form_label(form.email) }}
    {{ form_errors(form.email) }}
    {{ form_widget(form.email) }}
</div>

<div class="border border-warning-subtle border-1 rounded-2 my-4 p-4">
    <div class="row">
        <div class="col-6">
            {{ form_label(form.password.first) }}
            {{ form_errors(form.password.first) }}
            {{ form_widget(form.password.first) }}
        </div>
        <div class="col-6">
            {{ form_label(form.password.second) }}
            {{ form_errors(form.password.second) }}
            {{ form_widget(form.password.second) }}
        </div>
    </div>
    {% if user is defined and user.id %}
        <span class="text-muted">{{ 'Leave empty if you do not want to change the password'|trans }}</span>
    {% endif %}
</div>

<button class="btn btn-outline-primary">{{ 'Save'|trans }}</button>
<a class="btn btn-outline-secondary" href="{{ path('user_admin_index') }}">{{ 'Back to list'|trans }}</a>
{% if user is defined and user.id %}
    <a
            class="btn btn-outline-danger"
            href="{{ path('user_admin_delete', {'id': user.id, '_token': csrf_token('delete' ~ user.id)}) }}"
            onclick="return confirm('{{ 'Are you sure you want to delete this item?'|trans }}');"
    >
        {{ 'Delete'|trans }}
    </a>
{% endif %}
{{ form_end(form) }}
